@model EagleTimeManagement.Models.UserCredentials

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome!</h1>
<h4>Please log in with Total ETO credentials to continue.</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("Authenticate", "Login"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    }
</div>


