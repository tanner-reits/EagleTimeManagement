@model EagleTM.Data.TblTimecards

@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-center">Are you sure you want to delete this entry?</h4>

<div class="container-fluid pt-4">
    <div class="row">
        <div class="col-5 text-right font-weight-bold">
            Date:
        </div>
        <div class="col-7 text-left">
            @String.Format("{0:MM/dd/yyyy}", Model.TimeDate)
        </div>
    </div>

    <div class="row">
        <div class="col-5 text-right font-weight-bold">
            Project:
        </div>
        <div class="col-7 text-left">
            @Html.DisplayFor(model => model.ProjectId) -
            @Html.DisplayFor(model => model.TblProjects.Pdescription)
        </div>
    </div>
    <div class="row">
        <div class="col-5 text-right font-weight-bold">
            Station:
        </div>
        <div class="col-7 text-left">
            @Html.DisplayFor(model => model.SpecId) -
            @Html.DisplayFor(model => model.TblSpec.Sdescription)
        </div>
    </div>
    <div class="row">
        <div class="col-5 text-right font-weight-bold">
            Labor Code:
        </div>
        <div class="col-7 text-left">
            @Html.DisplayFor(model => model.HourType) -
            @Html.DisplayFor(model => model.HourTypeNavigation.HourDescription)
        </div>
    </div>
    <div class="row">
        <div class="col-5 text-right font-weight-bold">
            Hours:
        </div>
        <div class="col-7 text-left">
            @Html.DisplayFor(model => model.HourTime)
        </div>
    </div>

    @*<div class="row">
        <div class="col-6 text-center font-weight-bold">
            On Road:
        </div>
        <div class="col-6 text-left">
            @Html.DisplayFor(model => model.OnRoad)
        </div>
    </div>*@

</div>

<form asp-action="DeleteByTimeID">
    <div class="text-center pt-5">
        <input type="hidden" asp-for="TimeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </div>
    
</form>